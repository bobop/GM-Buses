<div id="content">
	<p><%= link_to "Mobile Site", :mobile => 1 %></p>
	<div id="info" class="form">
		<%= form_tag('/route', :method => :get) do -%>
			<%= label_tag 'route', "Route" %>
			<%= text_field_tag 'route' %>
			<%= submit_tag 'Search'%>
		<% end -%>
	</div>
	<div id="info">
		<table><tr>
		<% @routes['results']['bindings'].sort_by{ |k| k['routeno']['value'].to_i }.each_with_index do |r,i| %>
			<td><span><%= link_to r['routeno']['value'], route_path(:route => r['routeno']['value']) %></span></td><%=raw "</tr><tr>" if (i+1)%16 == 0 %>
		<% end %>
		</tr></table>
	</div>
	<p><% @routes.inspect %></p>
</div>